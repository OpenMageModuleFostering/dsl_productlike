<?xml version="1.0"?>
<config>
   <tabs>
        <facebook translate="label" module="productlike">
            <label>facebook like</label>
            <sort_order>700</sort_order>
        </facebook>
    </tabs>
	<sections>
        <productlike_options translate="label" module="productlike">
		
            <tab>facebook</tab>
            <label>Product like configuration</label>
            <frontend_type>text</frontend_type>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
	    <groups>
		<all_settings translate="label">
                    <label>facebook settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                      
                        <fbappid translate="label">
                            <label>Facebook App ID</label>
			    <comment><![CDATA[Get <a href="http://www.facebook.com/developers/createapp.php" target="_blank">Facebook APP ID</a> access info.]]>
			    <![CDATA[ Setup your site <a href="http://developers.facebook.com/setup/" target="_blank">Connect App</a> info.]]>                    </comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </fbappid>
						<fbface translate="label">
                            <label>Show Faces</label>
                            <frontend_type>select</frontend_type>
			    <source_model>adminhtml/system_config_source_yesno</source_model>              	           
			    <sort_order>5</sort_order>
			    <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </fbface>
			<fblayout translate="label">
                            <label>Button Layout</label>
                            <frontend_type>select</frontend_type>
                            <comment>Option 1 (defualt): standard, Option 2: button_count, Option 3: box_count</comment>
                            <source_model>DSL_Productlike_Model_Layout</source_model> 
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </fblayout>
			
                        <enabledisable translate="label">
                            <label>Enable/Disable</label>
                            <frontend_type>select</frontend_type>
			    <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </enabledisable>
						
                    </fields>
                </all_settings>
	</groups>
			
			
   </productlike_options>
   </sections>
</config>
